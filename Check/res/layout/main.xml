<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/white"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	<RelativeLayout
		android:id="@+id/layTop"
		android:background="@drawable/bottombar"
		android:layout_width="fill_parent"
		android:layout_height="48.0dip"
		>
		<Button
			android:textSize="11.0dip"
			android:textColor="@color/white"
			android:id="@+id/btnLeft"
			android:background="@drawable/button_style"
			android:layout_width="48.0dip"
			android:layout_height="32.0dip"
			android:layout_marginLeft="4.0dip"
			android:layout_centerVertical="true"
			>
		</Button>
		<TextView
			android:textSize="20.0dip"
			android:textColor="@color/white"
			android:gravity="center"
			android:id="@+id/tvPageName"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_toLeftOf="@+id/btnRight"
			android:layout_toRightOf="@+id/btnLeft"
			>
		</TextView>
		<Button
			android:textSize="11.0dip"
			android:textColor="@color/white"
			android:id="@+id/btnRight"
			android:background="@drawable/button_style"
			android:layout_width="48.0dip"
			android:layout_height="32.0dip"
			android:layout_marginRight="4.0dip"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			>
		</Button>
	</RelativeLayout>
	<include
		android:id="@+id/lay_home"
		layout="@layout/lay_home"
		>
	</include>
	<include
		android:id="@+id/lay_search"
		layout="@layout/lay_search"
		>
	</include>
	<include
		android:id="@+id/lay_list"
		layout="@layout/lay_list"
		>
	</include>
	<include
		android:id="@+id/lay_tool"
		layout="@layout/lay_tool"
		>
	</include>
	<LinearLayout
		android:id="@+id/layBottom"
		android:background="@drawable/bottombar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		>
		<include
			android:id="@+id/btnHome"
			layout="@layout/bottom_button"
			>
		</include>
		<include
			android:id="@+id/btnSearch"
			layout="@layout/bottom_button"
			>
		</include>
		<include
			android:id="@+id/btnList"
			layout="@layout/bottom_button"
			>
		</include>
		<include
			android:id="@+id/btnTool"
			layout="@layout/bottom_button"
			>
		</include>
	</LinearLayout>
</RelativeLayout>
