<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookfood"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Register the the new activity -->
        <activity
            android:name="com.example.bookfood.menu.riceMenuActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.bookfood.menu.stirMenuActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.bookfood.menu.noodleMenuActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.bookfood.menu.beverageMenuActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.bookfood.user.logonActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.bookfood.user.cartActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.bookfood.user.leaveMessageActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.bookfood.dialog.registerDialog"
            android:theme="@style/DialogTheme" >
        </activity>
        <activity
            android:name="com.example.bookfood.dialog.detailMenuDialog"
            android:theme="@style/DialogTheme" >
        </activity>
        <activity
            android:name=".dialog.sendInfoConfirmDialog"
            android:theme="@style/DialogTheme" >
        </activity>       
    </application>
    
</manifest>