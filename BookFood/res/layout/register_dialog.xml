<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/clock_dialog"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/clock_dialog_background">

	<LinearLayout	
	    android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="60dp">
      <!-- username_label -->
	  <TextView
	      android:paddingLeft="20dip"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:text="@string/username_label"
	      android:textColor="#000000"
	      android:textSize="20dip" >

	  </TextView>
	  <EditText
	      android:layout_marginLeft="10dip"
	      android:id="@+id/register_username_edit"
	      android:gravity="left"
	      android:layout_height="wrap_content"
	      android:layout_width="150dip"
	      >
	  </EditText>
	</LinearLayout>
	<!-- password_label -->
	<LinearLayout	
	    android:orientation="horizontal"
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="30dp"
		>
	  <TextView
	      android:paddingLeft="20dip"
	      android:text="@string/password_label"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:textSize="20dip"
	      android:textColor="#000000">
	  </TextView>
	  <EditText
	      android:layout_marginLeft="10dip"
	      android:id="@+id/register_password_edit"
	      android:inputType="number"
	      android:gravity="left"
	      android:layout_height="wrap_content"
	      android:layout_width="150dip"
	      android:password="true"
          android:singleLine="true">
	  </EditText>
	</LinearLayout>
    <!-- password_again_label -->
	<LinearLayout	
	    android:orientation="horizontal"
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="30dp"
		>
	  <TextView
	      android:paddingLeft="20dip"
	      android:text="@string/password_again_label"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:textSize="20dip"
	      android:textColor="#000000">
	  </TextView>
	  <EditText
	      android:layout_marginLeft="10dip"
	      android:id="@+id/register_password_again_edit"
	      android:inputType="number"
	      android:gravity="left"
	      android:layout_height="wrap_content"
	      android:layout_width="150dip"
	      android:password="true"
          android:singleLine="true">
	  </EditText>
	</LinearLayout>
	<!-- 提交注册信息按钮 -->
	<Button
	    android:layout_marginTop="30dip"
	    android:layout_marginLeft="120dip"
	    android:id="@+id/send_btn"
	    android:layout_height="60dip"
	    android:layout_width="wrap_content"
	    android:text="@string/submit_btn_label"
	    android:textSize="18dip"
	    android:layout_marginRight="20dip">
	</Button>
</LinearLayout>